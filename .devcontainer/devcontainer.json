{
    "name": "Jekyll-instance Dev Container",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode-remote.remote-containers",
        "rebornix.Ruby",
        "GitHub.copilot"

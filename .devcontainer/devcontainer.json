{
    "name": "Jekyll-instance Dev Container",
    "build": {
        "dockerfile": "../Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-vscode-remote.remote-containers",
                "rebornix.Ruby",
                "GitHub.copilot"
            ]
        }
    },
    "forwardPorts": [5000],
    "appPort": [80],
    "postStartCommand": "service apache2 start" 
}